<Project>
  <Target Name="IncludeFodyFiles">
    <ItemGroup>
      <WeaverFile Include="$(WeaverDirPath)\netstandard2.0\$(PackageId).dll" />
    </ItemGroup>

    <Error Text="FodyPackaging: No weaver found at $(WeaverDirPath)\netstandard2.0\$(PackageId).dll. $(ProjectName) should have a Project Dependency on $(PackageId)."
           Condition="'@(WeaverFile)'==''" />

    <ItemGroup>
      <NetStandardFilesToInclude Include="$(WeaverDirPath)\netstandard2.0\$(PackageId).xcf" />

      <TfmSpecificPackageFile Include="@(WeaverFile)"
                              PackagePath="netstandardweaver\%(Filename)%(Extension)" />
      <TfmSpecificPackageFile Include="$(WeaverPropsFile)"
                              PackagePath="build\$(PackageId).props" />
    </ItemGroup>
  </Target>
</Project>